# ========================================
# FlowCube Environment Variables Template
# ========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git - only commit .env.example
# ========================================

# Django Core Security
DJANGO_SECRET_KEY=generate-with-secrets.token_urlsafe-50-chars
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=flowcube.frzgroup.com.br,localhost,127.0.0.1

# Database Configuration
POSTGRES_USER=flowcube
POSTGRES_PASSWORD=change-me-strong-password-32-chars
POSTGRES_DB=flowcube
POSTGRES_HOST=flowcube-postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://flowcube:CHANGE_PASSWORD@flowcube-postgres:5432/flowcube

# Redis Configuration
REDIS_PASSWORD=change-me-strong-password-32-chars
REDIS_HOST=flowcube-redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://:CHANGE_PASSWORD@flowcube-redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_PASSWORD@flowcube-redis:6379/1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://flowcube.frzgroup.com.br,http://localhost:3000

# External API Keys (DO NOT COMMIT REAL VALUES)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
EVOLUTION_API_KEY=your-evolution-api-key-here
SALESCUBE_API_TOKEN=your-salescube-token-here
SALESCUBE_PROD_TOKEN=your-salescube-prod-token-here

# External Service URLs
EVOLUTION_API_URL=https://evolution.frzgroup.com.br
SALESCUBE_API_URL=https://api.frzglobal.com.br
N8N_WEBHOOK_URL=https://n8n.frzgroup.com.br/webhook

# Frontend
NEXT_PUBLIC_API_URL=https://flowcube.frzgroup.com.br/api/v1

# ========================================
# How to generate secure credentials:
# ========================================
# DJANGO_SECRET_KEY:
#   python3 -c "import secrets; print(secrets.token_urlsafe(50))"
#
# Database/Redis passwords:
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# ========================================
